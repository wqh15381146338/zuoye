<body>
  <div class="blog">
     <div class="bg"></div>
    <div class="cover"></div>
    <div class="main">
      <div class="header">
       
        <h2>欢迎来到我的日常</h2>
        <div class="col-lg-9" style="margin: auto;">
          <form action="/article/listAdd" method="post">
            
            
            
            <div class="form-group row">
              <label for="inputEmail3" class="col-sm-3 col-form-label">主题</label>
                <input type="text" name="title" placeholder="请输入主题" required>
            </div>
        
            <div class="form-group row">
              <label for="inputEmail3" class="col-sm-3 col-form-label">内容</label>
                <input type="text"  name="content" style="height:160px;margin-top: 30px;" placeholder="请输入内容" required>          
            </div>
            <div>
              <button type="submit" class="btn btn-primary">提交</button>
            </div>
            
          </form>
        </div>
      </div>
    </div>
  </div>

